{% extends 'base.html.twig' %}

{% block title %}Article List{% endblock %}

{% block body %}
    <div class="container">
        <div class="row col-md-12">
            <div class="">
                <h1>Article List</h1>
                <a href="{{ path('article_create') }}" class="btn btn-primary mb-3">Create Article</a>
                <ul class="list-group d-row ">
                    {% for article in articles %}
                        <li class="list-group-item col-4">
                            <h2>{{ article.title }}</h2>
                            <p>{{ article.description }}</p>
                            <small>Created at: {{ article.createdAt.format('Y-m-d H:i:s') }}</small>
                            <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-primary">Show Details</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
